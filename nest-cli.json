{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": false,
    "tsConfigPath": "tsconfig.json",
    "builder": "swc"
  },
  "overrides": {
    "src/modules/i18n": {
      "builder": "tsc" 
    }
  }
}