# =============================================================================
# APP CONFIGURATION
# =============================================================================
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:3000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://user:password@localhost:5432/nestjs_boilerplate?schema=public

# =============================================================================
# JWT CONFIGURATION
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-must-be-at-least-32-characters-long
JWT_EXPIRES_IN=1h

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379

# =============================================================================
# SOCIAL AUTHENTICATION
# =============================================================================

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Facebook OAuth
FACEBOOK_CLIENT_ID=your-facebook-client-id
FACEBOOK_CLIENT_SECRET=your-facebook-client-secret

# Discord OAuth
DISCORD_CLIENT_ID=your-discord-client-id
DISCORD_CLIENT_SECRET=your-discord-client-secret

# =============================================================================
# CLOUD STORAGE CONFIGURATION
# =============================================================================

# AWS S3
AWS_S3_REGION=us-west-2
AWS_S3_ACCESS_KEY_ID=your-aws-access-key-id
AWS_S3_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_S3_BUCKET_NAME=your-s3-bucket-name

# Alibaba Cloud OSS
ALIYUN_OSS_REGION=oss-us-west-1
ALIYUN_OSS_ACCESS_KEY_ID=your-aliyun-access-key-id
ALIYUN_OSS_ACCESS_KEY_SECRET=your-aliyun-access-key-secret
ALIYUN_OSS_BUCKET_NAME=your-oss-bucket-name

# Tencent Cloud COS
TENCENT_COS_REGION=ap-beijing
TENCENT_COS_SECRET_ID=your-tencent-secret-id
TENCENT_COS_SECRET_KEY=your-tencent-secret-key
TENCENT_COS_BUCKET_NAME=your-cos-bucket-name

# =============================================================================
# EMAIL CONFIGURATION (NODEMAILER)
# =============================================================================
NODEMAILER_HOST=smtp.gmail.com
NODEMAILER_PORT=587
NODEMAILER_USER=your-email@gmail.com
NODEMAILER_PASS=your-app-specific-password

# =============================================================================
# PAYMENT PROCESSING (STRIPE)
# =============================================================================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# =============================================================================
# BETTER AUTH CONFIGURATION
# =============================================================================
BETTERAUTH_API_KEY=your-betterauth-api-key

# =============================================================================
# RATE LIMITING
# =============================================================================
THROTTLER_TTL=60
THROTTLER_LIMIT=10

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=debug

# =============================================================================
# INTERNATIONALIZATION
# =============================================================================
DEFAULT_LANGUAGE=en
FALLBACK_LANGUAGE=en
